<Page x:Class="WpfAppTestUsickUI.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppTestUsickUI.Pages"
      mc:Ignorable="d" 
       UseLayoutRounding="True"
        SnapsToDevicePixels="True"
      d:DesignHeight="450" d:DesignWidth="800"
      
      Title="LoginPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Логин:" Margin="5"/>
            <TextBox Name="LoginTextBox" Width="200" Margin="5"/>
            <TextBlock Text="Пароль:" Margin="5"/>
            <PasswordBox Name="PassBox" Width="200" Margin="5"/>
            <Button Content="Войти" Width="200" Margin="5" Click="LoginClick"/>
        </StackPanel>
    </Grid>
</Page>
